@model IEnumerable<BehinFlex.Models.Projects>
@foreach(var item in Model)
{
<div class="col-md-4  col-sm-4 text-center">
    <div class="text-center">
        <img src="/ProjectImages/Image/@item.ProjectImageUrl" class="img-thumbnail" alt="@item.ProjectTitle">
    </div>
    <h4 class="text-weight-strong" dir="rtl">
        پروژه بزرگ<br /> 
    </h4>
    <p dir="rtl">
        @*@Html.Raw(item.ProjectDescription.Substring(0,100))*@
        @item.ProjectTitle
    </p>
    <p>
        <a href="/Project/ShowProjectDetail/@item.ProjectID" class="btn btn-more"><i class="fa fa-angle-left"></i>اطلاعات بیشتر </a>
    </p>
</div>
}