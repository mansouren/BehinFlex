@model BehinFlex.Models.ProductViewModel
@{
    ViewBag.Title = " محصولات هر گروه";

}
<div class="row" style="height:100%">
    <!--main content-->
    <!-- sidebar -->
    <div class="col-md-3 sidebar visible-md-block visible-lg-block" dir="rtl">
        <ul class="nav nav-stackedt ">
            <li class="active">
                <a href="#" class="first">
                    @Model.Product.ProductSubGroup.ProductSubGroupTitle

                </a>
            </li>
            @foreach (var item in Model.IEProduct)
            {
                <li>
                    <a href="/Product/ShowProduct/@item.ProductID">
                        @item.ProductTitle
                    </a>
                </li>
            }
        </ul>
    </div>
    <div class="col-md-9" style="min-height:72%;" dir="rtl">
        <div class="page-header">

            <h2 style="font-family: Tahoma; color:#01747b;">
                @Model.Product.ProductSubGroup.ProductGroup.ProductBrand.ProductBrandTitle
                <br /><br />
                <small>@Model.Product.ProductSubGroup.ProductGroup.ProductGroupTitle - @Model.Product.ProductSubGroup.ProductSubGroupTitle</small>

            </h2>
            <div class="alert alert-info text-center " id="alerts" style="display:none">
                <a href="/ShoppingCart/Index">
                    <p>محصول به پیش فاکتور شما افزوده شد</p>
                </a>
            </div>
            <div class="center">
                @if (Model.Product.ProductSubGroup.ProductGroup.ProductGroupID == 13)
                {
                    <br /><br />
                    <a href="~/pdf/catalog push.pdf" class="btn btn-info" role="button">دانلود کاتالوگ</a>

                    <a href="~/pdf/Installation and Operation Manual (Push Fit).pdf" class="btn btn-info" role="button"> دانلود دفترچه فنی </a><br /><br />
                }
                @if (Model.Product.ProductSubGroup.ProductGroup.ProductGroupID == 15)
                {
                    <br /><br /><a href="~/pdf/catalog panj.pdf" class="btn btn-info" role="button">دانلود کاتالوگ</a>

                    <a href="~/pdf/Installation and Operation Manual (Five Layers).pdf" class="btn btn-info" role="button"> دانلود دفترچه فنی </a><br /><br />
                }
                @if (Model.Product.ProductSubGroup.ProductGroup.ProductGroupID == 14)
                {
                    <br /><br />
                    <a href="~/pdf/catalog tak.pdf" class="btn btn-info" role="button">دانلود کاتالوگ</a>

                    <a href="~/pdf/Installation and Operation Manual (one Layer).pdf" class="btn btn-info" role="button"> دانلود دفترچه فنی </a><br /><br />
                }
            </div>

        </div>
        <div class="row " style="overflow-x:auto;">
            <div>
                <div id="snackbar" style="display: none;min-width: 250px;margin-left: -125px;background-color: gray;color: #fff;
     text-align: center; border-radius: 10px;padding: 16px;position: fixed;z-index: 1; left: 50%; bottom: 400px;font-size: 15px;">
                    محصول به پیش فاکتور شما افزوده شد
                </div>

                <ul class="list-inline user-menu pull-left "
                    style="position:fixed; z-index: 2; left: 175px; height:30px; border-radius: 4px;color: #fff; border:solid; border-color:#018990; background-color:lightblue">
                    <li><i class="fa fa-credit-card text-primary"></i></li>
                    <li>
                        <div id="TotalSum" class="text-weight-strong" style="color:black"> جمع کل : <span id="OrderTotal">0</span> ریال</div>
                    </li>
                    <li><i class="fa fa-credit-card text-primary"></i></li>
                    <li>
                        <div id="TotalSumWithDiscount" class="text-weight-strong" style="color:black">  جمع کل با تخفیف : <span id="OrderGrandTotal">0</span> ریال</div>
                    </li>
                </ul>
            </div>
            <br />
            <br />
            @Html.Partial("_ProductsList", Model)
        </div>
    </div>

</div>




@section Script
{
    <script src="~/scripts/jQuery_3.5.1/jquery-3.5.1.min.js"></script>
    <script src="~/scripts/_OrderFromShowProducts.js"></script>
}




