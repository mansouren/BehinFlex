<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - مدیریت</title>
    <link href="~/Content/bootstrap-rtl.min.css" rel="stylesheet" type="text/css" />

    <link href="http://cdn.kendostatic.com/2018.1.221/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="http://cdn.kendostatic.com/2018.1.221/styles/kendo.default.min.css" rel="stylesheet" />
    

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/scripts/jQuery_3.5.1/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <link href="~/Content/kendo/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/kendo.default.min.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />



    <link href="~/Content/kendo/kendo.rtl.min.css" rel="stylesheet" />
    @*<script src="~/scripts/Kendo/jquery.min.js"></script>*@
    <script src="~/scripts/Kendo/jszip.min.js"></script>
    <script src="~/scripts/Kendo/kendo.all.min.js"></script>
    <script src="~/scripts/Kendo/kendo.aspnetmvc.min.js"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>
    <script src="~/scripts/Kendo/kendo.messages.fa-IR.min.js"></script>
    <link href="~/Content/persian_fonts/css/IranSans.css" rel="stylesheet" />
    <link href="~/Content/persian_fonts/css/FontIran_Override.css" rel="stylesheet" />
</head>

<body class="k-rtl" style="font-family: tahoma">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("بهین فلکس", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("صفحه اصلی مدیریت", "Index", "Default")</li>

                </ul>
                <ul class="nav nav-pills navbar-left">
                    <li role="presentation">
                        <a>@User.Identity.Name خوش آمدید !</a>
                    </li>
                    <li role="presentation"><a href="/Account/SignOut">خروج از سایت</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

        <hr style="clear: both" />
        <footer>
            <p>&copy; کلیه حقوق این وب سایت متعلق به شرکت بهین فلکس می باشد</p>
        </footer>
    </div>
    @RenderSection("Script", false)

</body>
</html>